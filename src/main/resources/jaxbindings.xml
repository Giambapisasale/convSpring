<bindings xmlns="http://java.sun.com/xml/ns/jaxb" version="2.0"
	xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<!-- questi bindings servono a usare Date invece di XMLGregorianCalendar 
		durante la produzione delle classi java a partire da XSD -->
	<globalBindings>
		<javaType name="java.util.Date" xmlType="xs:date"
			parseMethod="com.trim.jaxb.DateAdapter.parseDate" printMethod="com.trim.jaxb.DateAdapter.printDate" />
		<javaType name="java.util.Date" xmlType="xs:dateTime"
			parseMethod="com.trim.jaxb.DateAdapter.parseDate" printMethod="com.trim.jaxb.DateAdapter.printDate" />
	</globalBindings>
</bindings>