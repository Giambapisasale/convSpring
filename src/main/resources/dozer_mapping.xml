<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<date-format>ddMMyy</date-format>
	</configuration>
	<mapping type="one-way">
		<class-a>com.trim.vo.RH_vo</class-a>
		<class-b bean-factory="org.dozer.factory.JAXBBeanFactory">com.trim.schema.CBIDlyStmtReqLogMsg000102
		</class-b>

		<field>
			<a map-get-method="getProperty" key="sender">rh</a>
			<b>GrpHdr.addtlInf</b>
		</field>
		<field>
			<a map-get-method="getProperty" key="support_name">rh</a>
			<b>GrpHdr.msgId</b>
		</field>
		<field>
			<a date-format="ddMMyy" map-get-method="getProperty" key="creation_date">rh</a>
			<b>GrpHdr.creDtTm</b>
		</field>

		<field>
			<a>r61</a>
			<b>stmt</b>
			<b-hint>com.trim.schema.CBIAccountStatement21</b-hint>
		</field>

		<!-- errore imposta solo il primo elemento della lista -->
		<field custom-converter="com.trim.utils.Converter_DatePropToListProp"
			custom-converter-param="creDtTm">
			<a date-format="ddMMyy" map-get-method="getProperty" key="creation_date">rh</a>
			<b>stmt</b>
		</field>


	</mapping>


	
	<!-- com.trim.schema.CBIAccountStatement21 -->
	<mapping type="one-way">
		<class-a>java.util.Properties</class-a>
		<class-b>com.trim.schema.CBIAccountStatement21</class-b>
		<field>
			<a map-get-method="getProperty" key="number">this</a>
			<b>elctrncSeqNb</b>
		</field>
		<field custom-converter="com.trim.utils.Converter_reasonToCpyDplctInd">
			<a map-get-method="getProperty" key="reason">this</a>
			<b>cpyDplctInd</b>
		</field>
		<field-exclude>
			<a>this</a>
			<b>bal</b>
		</field-exclude>
		<field-exclude>
			<a>this</a>
			<b>id</b>
		</field-exclude>
		<field-exclude>
			<a>this</a>
			<b>creDtTm</b>
		</field-exclude>
		<field-exclude>
			<a>this</a>
			<b>acct</b>
		</field-exclude>
		<field-exclude>
			<a>this</a>
			<b>txsSummry</b>
		</field-exclude>
		<field-exclude>
			<a>this</a>
			<b>ntry</b>
		</field-exclude>
		<field-exclude>
			<a>this</a>
			<b>addtlStmtInf</b>
		</field-exclude>

	</mapping>

</mappings>